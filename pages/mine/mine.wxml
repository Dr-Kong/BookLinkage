<!--pages/mine/mine.wxml-->
<view class="container">
	<view class="userBackground">
		<image class="userInfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
		<view class="userinfo-nickname">{{userInfo.nickName}}</view>
	</view>

	<view class="user-content">
		<view class="user-upload" bindtap="to_upload">
		上传书本
		</view>
		
		<view class="user-history" bindtap="to_history">
		历史记录
		</view>

		<view class="user-starred" bindtap="to_starred">
		我的收藏
		</view>

		<view class="user-feedback" bindtap="to_feedback">
		解答反馈
		</view>

		<view class="user-about" bindtap="to_about">
		关于我们
		</view>
	</view>
	
</view>
