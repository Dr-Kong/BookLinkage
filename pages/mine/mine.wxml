<!--pages/mine/mine.wxml-->
<view class="container">
	<view class="userBackground">
		<view wx:if="{{a.globalData.userInfo != null}}">
			<image class="userInfo-avatar"
				   src="{{a.globalData.userInfo.avatarUrl}}"/>
			<text class="userinfo-nickname">
				 {{userInfo.nickName}} 
			</text>
		</view>
		<view wx:else>
			<image class="userInfo-avatar"
				   src=""/>
			<button open-type="getUserInfo"
					bindgetuserinfo="setUserInfo">
				 登录 
			</button>
		</view>
	</view>

	<view class="user-content">
		<view wx:if="{{a.globalData.userInfo != null}}">
			<view class="user-upload" bindtap="to_upload">
				上传书本
			</view>
			<view class="user-history" bindtap="to_uploads">
				上传历史
			</view>
			<view class="user-history" bindtap="to_bargains">
				我的收藏
			</view>
			<view class="user-history" bindtap="to_favorites">
				咨询历史
			</view>
		</view>

		<view class="user-feedback" bindtap="to_feedback">
		解答反馈
		</view>

		<view class="user-about" bindtap="to_about">
		关于我们
		</view>
	</view>
	
</view>
