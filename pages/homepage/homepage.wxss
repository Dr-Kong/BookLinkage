/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInputView .userInfo-avatar{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-top: 30rpx;
  border-radius: 50%;
  margin-left: 5%;
}
.userInputView .getInfoB{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  margin-top: 30rpx;
  border-radius: 50%;
  margin-left: 5%;
}

.usermotto {
  margin-top: 200px;
}
.container{
  padding: 5rpx 0;
}

.notice{
  font-size: small;
  color: red;
  margin-left: 18%;
}
.userInputView{
  display: flex;
  flex-direction: row;
}
.userInputView.inputView{
  display: flex;
  flex-direction: column;
}
.userInputView.cancel{
  background-color: white;
  display: flex;
  flex-direction: column;
}
.cancelButton{
  height: 55rpx;
  width: 60rpx;
}
.wid{
  width: 100%;
  background-color: rgb(170, 168, 168);
}
.space{
  height: 50rpx;
  width: 100%;
  background-color: rgb(170, 168, 168);
}
.input{
  width: 500rpx
}
.PHC{
  font-size: small;
}
.bgc{
  background-color: white;
  width: 500rpx;
}
.bookItem{
  width: 100%;
  height: 700rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
}
.bookItem .bookImg{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
}
.bookItem .bookImg image{
  width: 100%;
}
.bookItem .bookInfo{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.bookItem .bookInfo .bookName{
  display: flex;
  overflow: hidden;
  flex-direction: row-reverse;
  font-size: large;
  font-weight: bold;
  margin-right: 30rpx;
}
.bookItem .bookInfo .bookPrice{
  color: red;
  display: flex;
  flex-direction: row-reverse;
  font-size: 32rpx;
  margin-right: 30rpx;
}
.bookItem .bookInfo .bookLegal{
  font-size: medium;
  font-weight: normal;
  display: flex;
  flex-direction: row-reverse;
  margin-right: 30rpx;
}

