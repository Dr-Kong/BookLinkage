<!--pages/book/book.wxml-->
<view class="container">
	<swiper indicator-dots="{{true}}"
		circular='{{true}}'
		autoplay="true" 
		interval="3000" 
		duration="1000">
		<swiper-item wx:for="{{fID}}" wx:key='index'>
			<image src="{{item}}"
				mode="aspectFill"
				data-i="index"
				bindtap="preview"/>
		</swiper-item>
	</swiper>
	<!-- Notification -->
	<text>由于平台无法跟踪交易是否完成，将所有咨询视作交易完成。如果交易未完成，卖家或买家可以在“历史记录”中撤销咨询，将商品重新上架</text>
	<!-- Bk Name -->
	<text>{{bkName}}</text>
	<!-- Price -->
	<text>{{' ￥ ' + p + ' '}}</text>
	<!-- Additional Info -->
	<text>{{addInfo}}</text>
	<!-- Star -->
	<cover-view wx:if="{{type != 2}}">
		<button bindtap="star">
			<!-- Selected -->
			<image wx:if="{{starred}}"
				src=""
				mode="aspectFit"/>
			<!-- Unselected -->
			<image wx:else
				src=""
				mode="aspectFit"/>
		</button>
	</cover-view>
	<!-- Bargain -->
	<cover-view wx:if="{{type != 2}}">
		<button bindtap="bargain">
			开始咨询
		</button>
	</cover-view>
	<!-- Contact Info -->
	<cover-view wx:if="showContactInfo">
		{{' ' + lastName + ' 同学 '}}
		<cover-view wx:if="{{wxID != ''}}">
			{{wxID}}
			<button>
				<!-- Copy -->
				<image src=""
					bindtap="copy"
					data-txt="{{wxID}}"/>
			</button>
		</cover-view>
		<cover-view wx:if="{{tel != ''}}">
			{{tel}}
			<button>
				<!-- Copy -->
				<image src=""
					bindtap="copy"
					data-txt="{{tel}}"/>
			</button>
		</cover-view>
	</cover-view>
</view>