<!--pages/book/book.wxml-->
<view class="container">
	<swiper indicator-dots="{{true}}"
		circular='{{true}}'
		autoplay="true" 
		interval="3000" 
		duration="1000">
		<swiper-item wx:for="{{record.fileID}}" wx:key='index'>
			<image src="{{item}}"
				mode="aspectFill"
				data-i="index"
				bindtap="preview"/>
		</swiper-item>
	</swiper>
	<!-- Notification -->
	<text>由于平台无法跟踪交易是否完成，将所有咨询视作交易完成。如果交易未完成，卖家或买家可以在“历史记录”中撤销咨询，将商品重新上架</text>
	<!-- Bk Name -->
	<text wx:if="{{record.bkName != ''}}">
		{{record.bkName}}
	</text>
	<!-- Legal -->
	<text wx:if="{{record.isLegal}}">
		正版书籍
	</text>
	<!-- Price -->
	<text wx:if="{{record.price != ''}}">
		{{' ￥ ' + record.price + ' '}}
	</text>
	<!-- Additional Info -->
	<text wx:if="{{record.addInfo != ''}}">
		{{record.addInfo}}
	</text>
	<!-- Star -->
	<cover-view wx:if="{{type != 2}}">
		<button bindtap="star">
			<!-- Selected -->
			<image wx:if="{{starred}}"
				src=""
				mode="aspectFit"/>
			<!-- Unselected -->
			<image wx:else
				src=""
				mode="aspectFit"/>
		</button>
	</cover-view>
	<!-- Bargain -->
	<cover-view wx:if="{{type != 2}}">
		<button bindtap="bargain">
			开始咨询
		</button>
	</cover-view>
	<!-- Contact Info -->
	<cover-view wx:if="{{showContactInfo}}">
		<cover-view wx:if="{{record.lastName != ''}}">
			{{' ' + record.lastName + ' 同学 '}}
		</cover-view>
		<cover-view wx:if="{{record.wxID != ''}}">
			{{record.wxID}}
			<button>
				<!-- Copy -->
				<image src=""
					bindtap="copy"
					data-txt="{{record.wxID}}"/>
			</button>
		</cover-view>
		<cover-view wx:if="{{record.telephone != ''}}">
			{{record.telephone}}
			<button>
				<!-- Copy -->
				<image src=""
					bindtap="copy"
					data-txt="{{record.telephone}}"/>
			</button>
		</cover-view>
	</cover-view>
</view>