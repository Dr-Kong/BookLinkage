<!--pages/book/book.wxml-->
<view class="container">
	<swiper indicator-dots="{{true}}"
		circular='{{true}}'
		class= "screen-swiper swiper"
		autoplay="true" 
		interval="3000" 
		duration="1000">
		<swiper-item wx:for="{{record.fileID}}"
			wx:key='index'
			data-i="{{index}}"
			bindtap="preview">
			<image src="{{item}}"
				mode="aspectFill"/>
		</swiper-item>
	</swiper>
	<!-- Notification -->
	<view class="notice">
		<text>
			请确认书籍信息
			由于平台无法跟踪交易状态，将所有咨询视作交易完成。
			如果交易未成功，卖家或买家可以在“历史记录”中撤销咨询，将商品重新上架。
		</text>
	</view>
	<!-- Bk Name -->
	<text wx:if="{{record.bkName != ''}}"
		class="bkName">
		{{record.bkName}}
	</text>
	<!-- Legal -->
	<text wx:if="{{record.isLegal}}"
		class="bkLegal">
		正版书籍
	</text>
	<!-- Price -->
	<text wx:if="{{record.price != ''}}"
		class="bkPrice">
		{{' ￥ ' + record.price + ' '}}
	</text>
	<!-- Additional Info -->
	<text wx:if="{{record.additionalInfo != ''}}">
		{{record.additionalInfo}}
	</text>
	<!-- Star -->
	<cover-view wx:if="{{type == 1}}" class="starred">
			<!-- Selected -->
			<cover-image wx:if="{{starred}}"
				class="Img"
				bindtap="star"
				src="../../icons/_starred.png"
				mode="scaleToFill"/>
			<!-- Unselected -->
			<cover-image wx:else
				class="Img"
				bindtap="star"
				src="../../icons/starred.png"
				mode="scaleToFill"/>
	</cover-view>
	<!-- Bargain -->
	<cover-view wx:if="{{!showContactInfo}}" class="bargain">
		<button bindtap="bargain">
			{{type == 1 ? '开始咨询' : '查看联系方式'}}
		</button>
	</cover-view>
	<view class="place"></view>
	<!-- Contact Info -->
	<cover-view wx:if="{{showContactInfo}}"
	class="contactInfo">
		<cover-view wx:if="{{record.lastName != ''}}"
			class="ssName">
			{{' ' + record.lastName + '同学 '}}
		</cover-view>
		<cover-view wx:if="{{record.wxID != ''}}"
			class="ssWXID">
			{{'微信号：' + record.wxID}}
			<cover-view bindtap="copy"
				data-txt="{{record.telephone}}"
				class="copy">
				复制
			</cover-view>
		</cover-view>
		<cover-view wx:if="{{record.telephone != ''}}"
			class="ssTL">
			{{'电话号码：' + record.telephone}}
			<cover-view bindtap="copy"
				data-txt="{{record.telephone}}"
				class="copy">
				复制
			</cover-view>
		</cover-view>
	</cover-view>
</view>